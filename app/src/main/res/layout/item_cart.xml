<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true"
    app:cardElevation="3dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#1E1E1E"

                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/tshirt_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/back_rl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF">

                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

                    <TextView
                        android:id="@+id/tv_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Add to cart"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="350dp"
                        app:srcCompat="@drawable/laundry" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tshirt_layout"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView8_tshirt"
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/t_shirt_svgrepo_com" />

                        <TextView
                            android:id="@+id/textView_tshirt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView8_tshirt"
                            android:layout_marginLeft="35dp"
                            android:text="T-Shirt"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/incremental_btn_tshirt"
                            android:layout_width="50dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="250dp"
                            android:layout_marginTop="40dp"
                            android:text="+"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txdisplay_tshirt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="310dp"
                            android:layout_marginTop="50dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/decremental_btn_tshirt"
                            android:layout_width="50dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="330dp"
                            android:layout_marginTop="40dp"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tx_percost_tshirt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="280dp"
                            android:layout_marginTop="100dp"
                            android:text="Rs 15/item"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tx_total_tshirt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="280dp"
                            android:layout_marginTop="120dp"
                            android:text="Total:"
                            android:textColor="@color/blue"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shirt_layout"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tshirt_layout">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView9_shirt"
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/shirt_svgrepo_com" />

                        <TextView
                            android:id="@+id/textView_shirt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView9_shirt"
                            android:layout_marginLeft="40dp"
                            android:text="Shirt"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/incremental_btn_shirt"
                            android:layout_width="50dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="250dp"
                            android:layout_marginTop="40dp"
                            android:text="+"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txdisplay_shirt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="310dp"
                            android:layout_marginTop="50dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/decremental_btn_shirt"
                            android:layout_width="50dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="330dp"
                            android:layout_marginTop="40dp"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tx_percost_shirt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="280dp"
                            android:layout_marginTop="100dp"
                            android:text="Rs 18/item"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tx_total_shirt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="280dp"
                            android:layout_marginTop="120dp"
                            android:text="Total:"
                            android:textColor="@color/blue"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/jeans_layout"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shirt_layout">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView_jeans"
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/jeans_4_svgrepo_com" />

                        <TextView
                            android:id="@+id/textView_jeans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView_jeans"
                            android:layout_marginLeft="38dp"
                            android:text="Jeans"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/incremental_btn_jeans"
                            android:layout_width="50dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="250dp"
                            android:layout_marginTop="40dp"
                            android:text="+"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txdisplay_jeans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="310dp"
                            android:layout_marginTop="50dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/decremental_btn_jeans"
                            android:layout_width="50dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="330dp"
                            android:layout_marginTop="40dp"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tx_percost_jeans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="280dp"
                            android:layout_marginTop="100dp"
                            android:text="Rs 20/item"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tx_total_jeans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="280dp"
                            android:layout_marginTop="120dp"
                            android:text="Total:"
                            android:textColor="@color/blue"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shorts_layout"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/jeans_layout">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView_shorts"
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/shorts_svgrepo_com" />

                        <TextView
                            android:id="@+id/textView_shorts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView_shorts"
                            android:layout_marginLeft="35dp"
                            android:text="Shorts"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/incremental_btn_shorts"
                            android:layout_width="50dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="250dp"
                            android:layout_marginTop="40dp"
                            android:text="+"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txdisplay_shorts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="310dp"
                            android:layout_marginTop="50dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/decremental_btn_shorts"
                            android:layout_width="50dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="330dp"
                            android:layout_marginTop="40dp"
                            android:text="-"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tx_percost_shorts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="280dp"
                            android:layout_marginTop="100dp"
                            android:text="Rs 10/item"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tx_total_shorts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="280dp"
                            android:layout_marginTop="120dp"
                            android:text="Total:"
                            android:textColor="@color/blue"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <Button
                android:id="@+id/address_btn_dry"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"

                android:layout_marginTop="16dp"
                android:layout_marginEnd="56dp"
                android:background="@color/black"
                android:text="Add Address"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shorts_layout"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>